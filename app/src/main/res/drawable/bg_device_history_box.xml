<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của nút -->
    <solid android:color="@color/white" /> <!-- Màu nền của nút, có thể thay đổi -->

    <!-- Đường viền của nút -->
    <stroke android:width="0dp" android:color="#000000"/> <!-- Độ dày và màu của đường viền -->

    <!-- Bo tròn góc -->
    <corners android:radius="32dp" /> <!-- Bo tròn 16dp, có thể thay đổi -->

    <!-- Padding bên trong nút -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>